#!/usr/bin/env bash
set -e
if [[ ! -d "/home/remi/School/fall-2024/seg3102/lab5" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/remi/School/fall-2024/seg3102/lab5")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/remi/School/fall-2024/seg3102/lab5" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/remi/School/fall-2024/seg3102/lab5/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/remi/School/fall-2024/seg3102/lab5/.envrc" "/home/remi/School/fall-2024/seg3102/lab5/.direnv"/*.rc
